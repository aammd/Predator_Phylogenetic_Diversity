file = {:home/andrew/Documents/reference/Mendeley{\_}pdfs/2007/Torres-Ruiz, Wehr, Perrone - 2007 - Trophic relations in a stream food web importance of fatty acids for macroinvertebrate consumers.pdf:pdf},
