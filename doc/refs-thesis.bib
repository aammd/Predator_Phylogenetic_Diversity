journal = {Ecology Letters},
keywords = {Abundance-occupancy,Dispersal,Freshwater,Generalists,Neutral models,Species sorting,Sweden},
number = {1},
pages = {118--127},
pmid = {19968693},
title = {{Regional invariance among microbial communities}},
volume = {13},
year = {2010}
}
