file = {:home/andrew/Documents/reference/Mendeley{\_}pdfs/2011/Calcagno et al. - 2011 - Constraints on food chain length arising from regional metacommunity dynamics.pdf:pdf},
issn = {1471-2954},
journal = {Proceedings. Biological sciences / The Royal Society},
keywords = {bottom-up control,colonization,extinction,habitat selection,patch dynamics},
month = {mar},
number = {iv},
pmid = {21367786},
title = {{Constraints on food chain length arising from regional metacommunity dynamics.}},
