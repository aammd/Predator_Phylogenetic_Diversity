issn = {0029-8549},
journal = {Oecologia},
keywords = {Analysis of Variance,Animals,Bees,Bees: physiology,California,Clarkia,Clarkia: physiology,Demography,Ecosystem,Geography,Pollen,Reproduction,Reproduction: physiology},
month = {jan},
number = {1},
pages = {28--37},
pmid = {15338417},
title = {{Pollinator community structure and sources of spatial variation in plant--pollinator interactions in Clarkia xantiana ssp. xantiana.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/15338417},
volume = {142},
