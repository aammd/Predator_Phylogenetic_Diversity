file = {:home/andrew/Documents/reference/Mendeley{\_}pdfs/2012/Eggermont, Heiri - 2012 - The chironomid-temperature relationship Expression in nature and palaeoenvironmental implications.pdf:pdf},
isbn = {1464-7931},
