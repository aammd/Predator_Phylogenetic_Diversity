doi = {10.1007/s00442-006-0467-3},
file = {:home/andrew/Documents/reference/Mendeley{\_}pdfs/2006/Srivastava - 2006 - Habitat structure, trophic structure and ecosystem function interactive effects in a bromeliad-insect community.pdf:pdf},
issn = {0029-8549},
journal = {Oecologia},
keywords = {Animals,Beetles,Beetles: physiology,Bromeliaceae,Bromeliaceae: physiology,Costa Rica,Ecosystem,Food Chain,Insects,Insects: physiology,Larva,Larva: physiology,Predatory Behavior,Regression Analysis},
month = {sep},
number = {3},
pages = {493--504},
pmid = {16896779},
title = {{Habitat structure, trophic structure and ecosystem function: interactive effects in a bromeliad-insect community.}},
