doi = {10.1111/1574-6941.12195},
file = {:home/andrew/Documents/reference/Mendeley{\_}pdfs/2014/Sz{\'{e}}kely, Langenheder - 2014 - The importance of species sorting differs between habitat generalists and specialists in bacterial commun.pdf:pdf},
issn = {1574-6941},
